# ==============================================================================
# FastAPI Authentication API - Environment Configuration
# ==============================================================================
# Copy this file to .env and configure with your own values before running
# ==============================================================================

# Database Configuration
DATABASE_URL=postgresql+asyncpg://admin:strongpassword123@db:5432/gemini_api
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_TITLE=Gemini API
API_DESCRIPTION=FastAPI Authentication System with JWT
API_VERSION=1.0.0
ENVIRONMENT=production

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8080,http://localhost:80

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=10

# Rate Limiting (requests per minute)
RATE_LIMIT_REGISTER=5
RATE_LIMIT_LOGIN=10
RATE_LIMIT_REFRESH=20

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Security
HASHING_SCHEME=argon2

# PostgreSQL Admin (pgAdmin)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123

# ==============================================================================
# IMPORTANT NOTES
# ==============================================================================
# 1. Change SECRET_KEY to a random string of at least 32 characters
#    Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 2. Change database password from 'strongpassword123' to something secure
# 3. Update CORS_ORIGINS for your production domain
# 4. Set ENVIRONMENT=development for development, production for production
# 5. Change pgAdmin credentials for production use
# ==============================================================================
